function GitAud(soundgit,filename)
    SoundName=tostring(SoundName)
    local url=soundgit
    local FileName = filename
    writefile(FileName..".mp3", game:HttpGet(url))
    return (getcustomasset or getsynasset)(FileName..".mp3")
end

function CustomGitSound(soundlink, vol, filename)
    local sound = Instance.new("Sound")
    sound.SoundId = GitAud(soundlink, filename)
    sound.Parent = workspace
    sound.Volume = 1
    sound.PlaybackSpeed = 1
    sound.Name = "SCAAARY"
    sound.Looped = false
   sound:Play()
end

CustomGitSound("https://github.com/pfgj32633-ux/My-Scripts/raw/refs/heads/main/XRecorder_Edited_20260206_01.mp3?raw=true", 1, " Scarey")

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player.PlayerGui

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "blackie"
screenGui.Parent = playerGui
screenGui.IgnoreGuiInset = true

local red = Instance.new("ImageLabel")
red.Name = "black"
red.Size = UDim2.new(1, 0, 1, 0)
red.BackgroundTransparency = 1 -- Make the background fully transparent
red.Image = "rbxassetid://95790599993140" -- Set the image using a random Image ID
red.ImageTransparency = 1
red.Parent = screenGui

local TweenService = game:GetService("TweenService")
local TW = TweenService:Create(game.Players.LocalPlayer.PlayerGui.blackie.black, TweenInfo.new(2),{ImageTransparency = 0})
TW:Play()

local SPEED_OFFSET = 3 -- tr·ª´ bao nhi√™u speed

local activeConnections = {}
local loopRunning = false

local function applyToCharacter(char)
	local hum = char:WaitForChild("Humanoid")

	local baseSpeed = hum.WalkSpeed
	local targetSpeed = baseSpeed - SPEED_OFFSET

	hum.WalkSpeed = targetSpeed

	-- theo d√µi thay ƒë·ªïi
	local conn = hum:GetPropertyChangedSignal("WalkSpeed"):Connect(function()
		if hum.WalkSpeed ~= targetSpeed then
			baseSpeed = hum.WalkSpeed
			targetSpeed = baseSpeed - SPEED_OFFSET
			hum.WalkSpeed = targetSpeed
		end
	end)
	table.insert(activeConnections, conn)

	-- loop backup
	loopRunning = true
	task.spawn(function()
		while loopRunning and hum.Parent do
			if hum.WalkSpeed ~= targetSpeed then
				baseSpeed = hum.WalkSpeed
				targetSpeed = baseSpeed - SPEED_OFFSET
				hum.WalkSpeed = targetSpeed
			end
			task.wait(0.3)
		end
	end)
end

-- spawn
if player.Character then
	applyToCharacter(player.Character)
end
player.CharacterAdded:Connect(applyToCharacter)

-- h√†m NG·∫ÆT script
_G.StopSpeedModifier = function()
	loopRunning = false
	for _,c in ipairs(activeConnections) do
		c:Disconnect()
	end
	activeConnections = {}
end

wait(51)
game.Workspace.SCAAARY:Destroy()
local TweenService = game:GetService("TweenService")
local TW = TweenService:Create(game.Players.LocalPlayer.PlayerGui.blackie.black, TweenInfo.new(3),{ImageTransparency = 1})
TW:Play()

local Players = game:GetService("Players")
local player = Players.LocalPlayer

local function hardStop(char)
    local hum = char:WaitForChild("Humanoid")

    -- üî• Ch·∫∑n m·ªçi script kh√°c ch·ªânh WalkSpeed
    local mt = getrawmetatable(game)
    local old = mt.__newindex
    setreadonly(mt,false)

    mt.__newindex = newcclosure(function(t,k,v)
        if t == hum and k == "WalkSpeed" then
            return -- ch·∫∑n to√†n b·ªô thay ƒë·ªïi t·ª´ script kh√°c
        end
        return old(t,k,v)
    end)

    setreadonly(mt,true)

    -- üí™ Ghi ƒë√® ng∆∞·ª£c l·∫°i t·ªëc ƒë·ªô th·∫≠t
    local realSpeed = 16
    hum.WalkSpeed = realSpeed

    task.spawn(function()
        while hum and hum.Parent do
            if hum.WalkSpeed ~= realSpeed then
                hum.WalkSpeed = realSpeed
            end
            task.wait(0.1)
        end
    end)
end

if player.Character then
    hardStop(player.Character)
end
player.CharacterAdded:Connect(hardStop)

wait(3.5)
game.Players.LocalPlayer.PlayerGui.blackie:Destroy()
