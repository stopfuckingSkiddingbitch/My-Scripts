-- SERVICES
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

-- PLAYER
local LocalPlayer = Players.LocalPlayer
local character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")
local humanoid = character:WaitForChild("Humanoid")

-- CONFIG
local PART_SPEED = 18.67
local MAX_POINTS = 30
local RECORD_DISTANCE = 2
local SPAWN_DISTANCE = 60

-- STATE
local pathPoints = {}
local isPaused = false
local grabbing = false
local entityDead = false

-- √∞≈∏‚Äù¬• DESTROY ENTITY FUNCTION
local function destroyEntity()
	if entityDead then return end
	entityDead = true
	
	if sound then
		sound:Stop()
		sound:Destroy()
	end
	
	if part then
		part:Destroy()
	end
	
	isPaused = true
	grabbing = true
	pathPoints = {}
end

-- √¢¬ù¬§√Ø¬∏¬è HP CHECK (CH√°¬∫¬æT L√É‚Ç¨ X√É‚ÄúA NGAY)
humanoid:GetPropertyChangedSignal("Health"):Connect(function()
	if humanoid.Health <= 0 then
		destroyEntity()
	end
end)

-- SPAWN ENTITY
part = Instance.new("Part")
part.Size = Vector3.new(8,7,8)
part.Anchored = true
part.Transparency = 1
part.CanCollide = false
part.CFrame = hrp.CFrame * CFrame.new(math.random(-10,10), math.random(-3,3), SPAWN_DISTANCE)
part.Parent = workspace

-- LIGHT + SOUND
light = Instance.new("PointLight", part)
light.Range = 16
light.Brightness = 15
light.Color = Color3.fromRGB(255,0,0)

sound = Instance.new("Sound", part)
sound.SoundId = "rbxassetid://4860560167"
sound.Looped = true
sound.Volume = 1
sound.PlaybackSpeed = 0.45
sound:Play()

-- BILLBOARD
local billboard = Instance.new("BillboardGui", part)
billboard.Size = UDim2.new(15,0,15,0)
billboard.AlwaysOnTop = true

local imageLabel = Instance.new("ImageLabel", billboard)
imageLabel.Size = UDim2.new(1,0,1,0)
imageLabel.BackgroundTransparency = 1

local IMAGE_IDLE   = "rbxassetid://103348219740749"
local IMAGE_MOVE_1 = "rbxassetid://123963227898864"
local IMAGE_MOVE_2 = "rbxassetid://79292400376333"

-- √∞≈∏‚Äò¬Å LOOK DETECT
RunService.RenderStepped:Connect(function()
	if entityDead then return end
	local cam = workspace.CurrentCamera
	local dir = (part.Position - cam.CFrame.Position).Unit
	local dot = dir:Dot(cam.CFrame.LookVector)
	isPaused = dot > 0.75
end)

-- IMAGE ANIMATION
task.spawn(function()
	local toggle = false
	while part.Parent and not entityDead do
		imageLabel.Image = isPaused and IMAGE_IDLE or (toggle and IMAGE_MOVE_1 or IMAGE_MOVE_2)
		toggle = not toggle
		task.wait(0.5)
	end
end)

-- RECORD PATH
task.spawn(function()
	while character.Parent and not entityDead do
		if #pathPoints == 0 or (hrp.Position - pathPoints[#pathPoints]).Magnitude >= RECORD_DISTANCE then
			table.insert(pathPoints, hrp.Position)
			if #pathPoints > MAX_POINTS then table.remove(pathPoints,1) end
		end
		task.wait(0.15)
	end
end)

-- FOLLOW PATH
task.spawn(function()
	while part.Parent and not entityDead do
		if not isPaused and not grabbing and #pathPoints > 0 then
			local target = table.remove(pathPoints,1)
			local tween = TweenService:Create(part, TweenInfo.new((target - part.Position).Magnitude / PART_SPEED, Enum.EasingStyle.Linear), {CFrame = CFrame.new(target)})
			tween:Play()
			tween.Completed:Wait()
		else
			task.wait(0.1)
		end
	end
end)

-- LIGHT JUMPSCARE
local function doLightJumpscare()
	if entityDead then return end
	
	local s = Instance.new("Sound", workspace)
	s.SoundId = "rbxassetid://9125466772"
	s.Volume = 5
	s:Play()

	local gui = Instance.new("ScreenGui", game.CoreGui)
	gui.IgnoreGuiInset = true

	local img = Instance.new("ImageLabel", gui)
	img.AnchorPoint = Vector2.new(0.5,0.5)
	img.Position = UDim2.new(0.5,0,0.5,0)
	img.Size = UDim2.new(0,200,0,200)
	img.BackgroundTransparency = 1
	img.Image = IMAGE_MOVE_2

	TweenService:Create(img, TweenInfo.new(0.4), {
		Size = UDim2.new(0,1400,0,1400),
		ImageTransparency = 0.4
	}):Play()

	task.wait(0.5)
	gui:Destroy()
	s:Destroy()
end

-- √¢Àú √Ø¬∏¬è DEATH SYSTEM
humanoid.Died:Connect(function()

	destroyEntity()

	firesignal(
		game.ReplicatedStorage.RemotesFolder.DeathHint.OnClientEvent,
		{
			"You died to Cataclysm...",
			"It moves whenever you are not looking at it.",
			"Keeping your eyes on it stops it from advancing.",
			"Cataclysm cannot approach while being observed."
		},
		"Blue"
	)

	game.ReplicatedStorage.GameStats["Player_" .. LocalPlayer.Name]
	.Total.DeathCause.Value = "Cataclysm"

	task.wait(1.5)

	local achievementGiver = loadstring(game:HttpGet("https://raw.githubusercontent.com/Voor-Pr00/Achivements/refs/heads/main/Voorpr0"))()
	achievementGiver({
		Title = "Monitoring",
		Desc = "I'm slow, you're weak.",
		Reason = "Died to Cataclysm.",
		Image = "rbxassetid://124614762641554"
	})
end)

-- GRAB SYSTEM
part.Touched:Connect(function(hit)
	if entityDead or hit.Parent ~= character or grabbing then return end
	grabbing = true

	local cam = workspace.CurrentCamera
	local pushDir = (hrp.Position - part.Position).Unit
	hrp.Velocity = pushDir * 60 + Vector3.new(0,15,0)

	for _,v in ipairs(character:GetDescendants()) do
		if v:IsA("BasePart") or v:IsA("Decal") then
			v.LocalTransparencyModifier = 1
		end
	end

	local oldWalk = humanoid.WalkSpeed
	local oldJump = humanoid.JumpPower
	humanoid.WalkSpeed = 0
	humanoid.JumpPower = 0

	cam.CameraType = Enum.CameraType.Scriptable
	local targetCF = CFrame.lookAt(cam.CFrame.Position, part.Position)
	TweenService:Create(cam, TweenInfo.new(0.4), {CFrame = targetCF}):Play()
	task.wait(0.4)

	RunService:BindToRenderStep("FreezeFrame", 201, function()
		cam.CFrame = targetCF
	end)

	task.wait(0.75)

	doLightJumpscare()
	humanoid:TakeDamage(30)

	local animation = Instance.new("Animation")
	animation.AnimationId = "rbxassetid://18759987341"
	local fallen = humanoid:LoadAnimation(animation)
	fallen:Play()
	fallen.TimePosition = 1

	RunService:UnbindFromRenderStep("FreezeFrame")
	cam.CameraType = Enum.CameraType.Custom

	humanoid.WalkSpeed = oldWalk
	humanoid.JumpPower = oldJump

	for _,v in ipairs(character:GetDescendants()) do
		if v:IsA("BasePart") or v:IsA("Decal") then
			v.LocalTransparencyModifier = 0
		end
	end

	if part then
		part.CFrame = part.CFrame - part.CFrame.LookVector * 15
	end

	isPaused = true
	task.wait(5)
	isPaused = false
	grabbing = false
end)
